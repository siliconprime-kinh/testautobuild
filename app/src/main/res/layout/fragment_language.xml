<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_grey"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnBack"
        android:layout_below="@+id/txtDate"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/text_green"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/text_green"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_english"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/english"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgEnglish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_spanish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/spanish"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgSpanish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_french"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/french"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgFrench"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_russian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/russian"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgRussian"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_deutsch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/deutsch"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgDeutsch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_arabic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/arabic"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgArabic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_donate"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lay_mandarin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@drawable/selector_row_language">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/mandarin"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgMadarin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_language_uncheck" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
