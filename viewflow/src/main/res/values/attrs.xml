<resources>
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>
    <declare-styleable name="CircleViewFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="flow_radius" format="dimension" />
        <attr name="spacing" format="dimension" />
		<attr name="flow_centered" format="boolean" />
		<attr name="fadeOut" format="integer" />
		<attr name="inactiveType">
			<flag name="stroke" value="0" />
			<flag name="fill" value="1" />
		</attr>
		<attr name="activeType">
			<flag name="stroke" value="0" />
			<flag name="fill" value="1" />
		</attr>
    </declare-styleable>    
    <declare-styleable name="TitleViewFlowIndicator">
        <attr name="flow_titlePadding" format="dimension" />
        <!-- Left/right padding of not active view titles. -->
        <attr name="flow_clipPadding" format="dimension" />
        <attr name="flow_selectedColor" format="color" />
        <attr name="flow_selectedBold" format="boolean" />
        <attr name="flow_selectedSize" format="dimension" />
        <attr name="flow_textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="flow_footerLineHeight" format="dimension" />
        <attr name="flow_footerColor" format="color" />
        <attr name="flow_footerTriangleHeight" format="dimension" />
        <attr name="customTypeface" format="string" />
    </declare-styleable>    
</resources>