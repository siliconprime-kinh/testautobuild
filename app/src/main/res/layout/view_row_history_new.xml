<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_screen_grey"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">

        <com.dropininc.customview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_avatar_example" />


        <LinearLayout
            android:id="@+id/lay_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/line_price"
            android:layout_toRightOf="@+id/img_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_avatar"
                android:singleLine="true"
                android:text="Samuel J dfa dsf ads fasd sadf"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/imgRate"
                android:layout_width="107dp"
                android:layout_height="18dp"
                android:layout_below="@+id/txtPrice"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_rate_group_3" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="Date: 09.09.2015"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_avatar"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/img_history_location_gray"
                    android:drawablePadding="4dp"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/location"
                    android:textColor="@color/text_gray_custom"
                    android:textSize="@dimen/text_size_small" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/divider_gray_new" />

                <TextView
                    android:id="@+id/txtGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_avatar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/img_history_gps_gray"
                    android:drawablePadding="4dp"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/GPS"
                    android:textColor="@color/text_gray_custom"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="$150.00"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/img_chat_history"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/selector_chat_history" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtDes"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="#D5D8D8"
        android:gravity="center_horizontal|center_vertical"
        android:singleLine="true"
        android:text="123, Ho Chi Minh City"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_donate"
        android:background="@color/divider_gray_new" />

</LinearLayout>